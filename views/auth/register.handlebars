<section class="auth-container">
    <h2>Registrar</h2>
    <form class="form" action="/register" method="POST">
        <div class="form__control">
            <label for="name">Nome:</label>
            <input type="text" name="name" placeholder="Digite seu nome" required>
        </div>
        <div class="form__control">
            <label for="email">E-mail:</label>
            <input type="text" name="email" placeholder="Digite seu E-mail" required>
        </div>
        <div class="form__control">
            <label for="password">Senha:</label>
            <input type="password" name="password" placeholder="Digite sua senha" required>
        </div>
        <div class="form__control">
            <label for="confirmpassword">Confirma Senha:</label>
            <input type="password" name="confirmpassword" placeholder="Confirme sua senha" required>
        </div>
        <input class="form__btn" type="submit" value="Cadastrar">
       <p>JÃ¡ tem conta? <a href="/login">Clique aqui!</a></p>
    </form>
</section>